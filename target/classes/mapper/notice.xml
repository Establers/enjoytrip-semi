<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper
	namespace="com.enjoytrip.notice.model.mapper.NoticeMapper">

	<resultMap type="NoticeDto" id="notice">
		<result column="notice_id" property="noticeid" />
		<result column="register_time" property="registertime" />
		<result column="hit" property="hit" />
		<result column="title" property="title" />
		<result column="content" property="content" />
		<result column="admin_id" property="adminid" />
	</resultMap>

	<sql id="search">
		<if test="word != null and word != ''">
			<if test="key == 'title'">
				where title like concat('%', #{word}, '%')
			</if>

			<if test="key == 'content'">
				where content like concat('%', #{word}, '%')
			</if>
		</if>
	</sql>

	<select id="listNotice" parameterType="map"
		resultType="NoticeDto" resultMap="notice">
		select *
		from notice
		<!-- <include refid="search"></include> -->
		order by notice_id
		limit #{start}, #{listsize}
	</select>

	<select id="getNotice" parameterType="int"
		resultType="NoticeDto">
		select *
		from notice where
		notice_id=#{noticeid}
	</select>

	<insert id="write" parameterType="NoticeDto">
		insert into notice (notice_id,
		register_time, hit, title, content, admin_id)
		values (default, now(),
		0,
		#{title}, #{content}, #{adminid})
	</insert>

	<insert id="registFile" parameterType="NoticeDto">
		insert into notice_file_Info (idx, notice_id, save_folder,
		original_file, save_file)
		values
		<foreach collection="fileInfos" item="fileinfo"
			separator=" , ">
			(#{hotplaceId}, #{fileinfo.saveFolder},
			#{fileinfo.originalFile}, #{fileinfo.saveFile})
		</foreach>
	</insert>

	<delete id="delete" parameterType="java.lang.Integer">
		delete from notice where
		notice_id=#{noticeid}
	</delete>

	<update id="modify" parameterType="NoticeDto">
		update
		notice set
		title=#{title}, register_time=now(), content=#{content}
		where
		notice_id=#{noticeid}
	</update>

	<update id="updateNoticeHit" parameterType="java.lang.Integer">
		update notice set
		hit=hit+1 where notice_id=#{noticeid}
	</update>

	<select id="getTotalNoticeCount" parameterType="map"
		resultType="int">
		select count(notice_id)
		from notice
		<where>
			<include refid="search"></include>
		</where>
	</select>
</mapper>